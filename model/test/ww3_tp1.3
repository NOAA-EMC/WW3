#    Copyright 2009 National Weather Service (NWS),                         #
#       National Oceanic and Atmospheric Administration.  All rights        #
#       reserved.  WAVEWATCH III is a trademark of the NWS.                 #
#       No unauthorized use without permission.                             #
#                                                                           #
#############################################################################

# 0. Preparations -----------------------------------------------------------

  ww3_env='.wwatch3.env'   # setup file

# 0.a Set-up variables

  cd
  if [ -f $ww3_env ]
  then
    set `grep WWATCH3_DIR $ww3_env` ; shift
    main_dir="$*"
    set `grep WWATCH3_TMP $ww3_env` ; shift
    temp_dir="$*"
  else
    echo "*** Set-up file $ww3_env not found ***"
    exit
  fi

  path_w="$temp_dir"              # work directory
  path_e="$main_dir/exe"          # path for executables
  path_o="$main_dir/test"         # path for output files
# path_o="$main_dir/work"

# 0.b Clean-up

  clear
  rm -f $path_o/ww3_????.out
  rm -f $path_o/log.ww3
  rm -f $path_o/test.ww3
  rm -f $path_o/tab??.ww3

  cd $path_w
  rm -f *.ww3

  echo ' ' ; echo ' '
  echo '                  ======> TEST RUN WAVEWATCH III <====== '
  echo '                    ==================================   '
  echo '                                   propagation test'
  echo '                                   1-D monochromatic shoaling'
  echo ' '

# 1. Grid pre-processor -----------------------------------------------------

  echo ' '
  echo '+--------------------+'
  echo '|  Grid preprocessor |'
  echo '+--------------------+'
  echo ' '

cat > ww3_grid.inp << EOF
$ WAVEWATCH III Grid preprocessor input file
$ ------------------------------------------
  'MONOCHROMATIC SHOALING X      '
$
   1.25 0.08  3  4  0.
$
   F T F F F F
 1200.  1200.  1200.  1200.
$
$ &PRO3 WDTHCG = 0., WDTHTH = 0. /
$ &PRO4 RNFAC = 0., RSFAC = 0. /
END OF NAMELISTS
$
   'RECT' F F
   43  3
    15.E3   15.E3  1.
   -15.E3  -15.E3  1.
$
  -1. 1. 10  -1. 2 1 '(....)' 'UNIT' 'input'
$
  80 80 80 78 76 74 72 70 68 66 64 62 60 58 56 54 52 50
           48 46 44 42 40 38 36 34 32 30 28 26 24 22 20
           18 16 14 12 10  8  6  4  2  2
  80 80 80 78 76 74 72 70 68 66 64 62 60 58 56 54 52 50
           48 46 44 42 40 38 36 34 32 30 28 26 24 22 20
           18 16 14 12 10  8  6  4  2  2
  80 80 80 78 76 74 72 70 68 66 64 62 60 58 56 54 52 50
           48 46 44 42 40 38 36 34 32 30 28 26 24 22 20
           18 16 14 12 10  8  6  4  2  2
$ 
   10 1 1 '(....)' 'PART' 'mapsta.inp'
$
   1  2  F
   0  0  F
   0  0  F
   0  0 
$
   0. 0. 0. 0.  0
EOF

  echo "   Screen ouput routed to $path_o/ww3_grid.out"
  $path_e/ww3_grid > $path_o/ww3_grid.out

  rm -f ww3_grid.inp

# 2. Initial conditions -----------------------------------------------------

  echo ' '
  echo '+--------------------+'
  echo '| Initial conditions |'
  echo '+--------------------+'
  echo ' '

cat > ww3_strt.inp << EOF
$ WAVEWATCH III Initial conditions input file
$ -------------------------------------------
  1
   0.1  0.0001  270. 200  -15.E3 15.E3  0. 15.E3 1.0
EOF

  echo "   Screen ouput routed to $path_o/ww3_strt.out"
  $path_e/ww3_strt > $path_o/ww3_strt.out

  rm -f ww3_strt.inp

# 3. Main program -----------------------------------------------------------

  echo ' '
  echo '+--------------------+'
  echo '|    Main program    |'
  echo '+--------------------+'
  echo ' '

cat > ww3_shel.inp << EOF
$ WAVEWATCH III shell input file
$ ------------------------------
   F T
   F T
   F T
   F
   F
   F
   F
$
   19680606 000000
   19680608 000000
$
   1
$
   19680606 000000   3600  19680608 000000
     T F F F F  T F F F F  F F F F F  F F F F F  F F F F F F  F F F F F  F
   19680606 000000      0  19680608 000000
   19680606 000000      0  19680608 000000
   19680606 000000      0  19680608 000000
   19680606 000000      0  19680608 000000
   19680606 000000      0  19680608 000000
EOF

  $path_e/ww3_shel

  rm -f ww3_shel.inp

  echo ' ' ; echo "   Output file log.ww3 routed to $path_o"
  mv log.ww3 $path_o/.
  if [ -f test.ww3 ]
  then
    echo "   Output file test.ww3 routed to $path_o"
    mv test.ww3 $path_o/.
  fi

# 4. Gridded output ---------------------------------------------------------

  echo ' '
  echo '+--------------------+'
  echo '|   Gridded output   |'
  echo '+--------------------+'
  echo ' '

  echo '   Normalized fields every hour'

cat > ww3_outf.inp << EOF
$ WAVEWATCH III Grid output post-processing
$ -----------------------------------------
  19680606 010000 3600. 48
$
  F F F F F  T F F F F  F F F F F  F F F F F  F F F F F F  F F F F F  F
$
  1 0
$
  1 42 1 2 2 1 T F F
EOF

  echo "   Screen ouput routed to $path_o/ww3_of_1.out"
  $path_e/ww3_outf > $path_o/ww3_of_1.out

  rm -f ww3_outf.inp

  echo ' '
  echo '   Wave heights at end'

cat > ww3_outf.inp << EOF
$ WAVEWATCH III Grid output post-processing
$ -----------------------------------------
  19680608 000000 3600. 1
$
  T F F F F  T F F F F  F F F F F  F F F F F  F F F F F F  F F F F F  F
$
  1 0
$
  1 42 1 2 2 1 F F F
EOF

  echo "   Screen ouput routed to $path_o/ww3_of_2.out"
  $path_e/ww3_outf > $path_o/ww3_of_2.out

  rm -f ww3_outf.inp

# 5. Point output -----------------------------------------------------------

# echo ' '
# echo '+--------------------+'
# echo '|    Point output    |'
# echo '+--------------------+'
# echo ' '

# 6. End, cleaning up -------------------------------------------------------

  echo ' ' ; echo ' ' ; echo "Files in `pwd` :" ; echo ' '
  ls -l *.ww3

  echo ' ' ; echo "Cleaning-up `pwd`"
  rm -f *.ww3

  echo ' ' ; echo "Files in $path_o :" ; echo ' '
  cd $path_o
  ls -l ww3_????.out
  ls -l *.ww3

  echo ' ' ; echo ' '
  echo '                  ======>  END OF WAVEWATCH III  <====== '
  echo '                    ==================================   '
  echo ' '

# End of ww3_tp1.3 ----------------------------------------------------------
