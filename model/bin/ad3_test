#!/bin/sh
# --------------------------------------------------------------------------- #
# ad3_test : test version of ad3 generating maximum test output for w3adc     #
#            and skipping compile.                                            #
#                                                                             #
#                                                      Hendrik L. Tolman      #
#                                                      May 2009               #
#                                                                             #
#    Copyright 2009 National Weather Service (NWS),                           #
#       National Oceanic and Atmospheric Administration.  All rights          #
#       reserved.  WAVEWATCH III is a trademark of the NWS.                   #
#       No unauthorized use without permission.                               #
#                                                                             #
# --------------------------------------------------------------------------- #
# 1. Preparations                                                             #
# --------------------------------------------------------------------------- #
# 1.a Check and process input

  if [ "$#" -gt '2' ] || [ "$#" -lt 1 ]
  then
    echo "usage: ad3_test basename [itest]" 1>&2 ; exit 1
  fi

  name=$1
  if test "$#" = '2' 
  then
    itst=$2
  else
    itst='0'
  fi

# 1.b Internal variables - - - - - - - - - - - - - - - - - - - - - - - - - - - 

  ww3_env="${HOME}/.wwatch3.env"                           # setup file
  if [ ${WWATCH3_ENV} ]; then ww3_env="${WWATCH3_ENV}"; fi # alternate setup file
  switch="switch"          # file containing switches
  doc_dir=doc90            # docblock directory

# 1.c Read data from the environment file  - - - - - - - - - - - - - - - - - -

  if [ -f $ww3_env ]
  then
    set `grep WWATCH3_DIR $ww3_env` ; shift
    main_dir="$*"
    set `grep WWATCH3_TMP $ww3_env` ; shift
    temp_dir="$*"
    set `grep WWATCH3_SOURCE $ww3_env` ; shift
    source="$*"
    set `grep WWATCH3_LIST $ww3_env` ; shift
    list="$*"
  else
    echo "*** Set-up file $ww3_env not found ***"
    exit 2
  fi

# 1.d Set up paths etc.  - - - - - - - - - - - - - - - - - - - - - - - - - - - 

  path_b="$main_dir/bin"
  path_w="$temp_dir"
  path_i="$main_dir/ftn"
  path_o="$main_dir/obj"
  path_e="$main_dir/exe"

  doc_dir=$main_dir/$doc_dir

  sw_str=`cat $path_b/$switch`

  if [ ! -d $path_w ]
  then
    if ! `mkdir $path_w`
    then
      echo '      *** w3adc error ***'
      echo "          Cannot create $path_w"
      exit 3
    fi
  fi

# 1.e Test necessity of running w3adc - - - - - - - - - - - - - - - - - - - -

  if [ -f $path_i/$name.ftn ]
  then
    w3adc='yes'
    idstr=
  else
    w3adc='no'
    idstr='[no w3adc]'
  fi

# 1.f Output - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 

  echo "ad3 : processing $name $idstr"

  if [ "$itst" != '0' ]
  then
    echo ' ' ; echo 'Test output ad3 ' ; echo '----------------'
    echo "  bin directory    : $path_b "
    echo "  work directory   : $path_w "
    echo "  input directory  : $path_i "
    echo "  object directory : $path_o "
    echo "  executable dir.  : $path_e "
    echo "  switches file    : $switch " ; echo ' '
    echo "  switches         : $sw_str"
    echo ' '
  fi

# 1.g Final preparations - - - - - - - - - - - - - - - - - - - - - - - - - - - 

  cd $path_w

# --------------------------------------------------------------------------- #
# 2. Run w3adc                                                                #
# --------------------------------------------------------------------------- #
# 2.a Make input file

  echo 1 0                                       > w3adc.inp
  echo "'$path_i/$name.ftn' '$name.f90'"        >> w3adc.inp
  echo "'$sw_str'"                              >> w3adc.inp

# 2.b Add NCEP/NCO docmentation  - - - - - - - - - - - - - - - - - - - - - - - 

  if [ -d $doc_dir ]
  then
    doc_data="`sed -n '/^.docb_/p' $path_i/$name.ftn 2> /dev/null | awk '{ print $1}'`"
    if [ -n "$doc_data" ]
    then
      for doc_string in $doc_data
      do
        doc_ID=`echo $doc_string | cut -c1-6`
        doc_file=`echo $doc_string | sed "s/$doc_ID//g"`
        if [ -f $doc_dir/$doc_file ]
        then
          echo "'$doc_string' '$doc_dir/$doc_file' "  >> w3adc.inp
        else
          echo "         File $doc_file in $doc_dir not found."
        fi
      done
    fi
  fi

# 2.c Run w3adc  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 

  if [ "$itst" != '0' ]
  then
    echo '-- input file w3adc.inp -------------------------------------------'
    cat w3adc.inp
    echo '-- end of file ----------------------------------------------------'
  fi

  $path_b/w3adc < w3adc.inp
 
# End of ad3 ---------------------------------------------------------------- #
