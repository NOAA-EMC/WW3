! -------------------------------------------------------------------- !
! WAVEWATCH III - ww3_grid.nml - Grid pre-processing                   !
! -------------------------------------------------------------------- !

! -------------------------------------------------------------------- !
! Define the spectrum parameterization via SPECTRUM_NML namelist
! -------------------------------------------------------------------- !
&SPECTRUM_NML
  SPECTRUM%XFR       =  1.1
  SPECTRUM%FREQ1     =  0.11
  SPECTRUM%NK        =  13
  SPECTRUM%NTH       =  24
/

! -------------------------------------------------------------------- !
! Define the run parameterization via RUN_NML namelist
! -------------------------------------------------------------------- !
&RUN_NML
  RUN%FLCX         =  T
  RUN%FLCY         =  T
  RUN%FLSOU        =  T
/

! -------------------------------------------------------------------- !
! Define the timesteps parameterization via TIMESTEPS_NML namelist
! -------------------------------------------------------------------- !
&TIMESTEPS_NML
  TIMESTEPS%DTMAX        =  3600
  TIMESTEPS%DTXY         =  1800
  TIMESTEPS%DTKTH        =  1800
  TIMESTEPS%DTMIN        =  60
/

! -------------------------------------------------------------------- !
! Define the grid to preprocess via GRID_NML namelist
! -------------------------------------------------------------------- !
&GRID_NML
  GRID%NAME         =  'RTD pole BCs test (RTD grid)'
  GRID%NML          =  '../input/namelists_RTD.nml'
  GRID%TYPE         =  'RECT'
  GRID%COORD        =  'SPHE'
  GRID%CLOS         =  'NONE'
  GRID%ZLIM         =  -0.1
  GRID%DMIN         =  10.0
/

! -------------------------------------------------------------------- !
! Define the rectilinear grid type via RECT_NML namelist
! -------------------------------------------------------------------- !
&RECT_NML
  RECT%NX           =  10
  RECT%NY           =  10
  RECT%SX           =  1.0
  RECT%SY           =  1.0
  RECT%SF           =  1.0
  RECT%X0           =  -8.0
  RECT%Y0           =  0.0
  RECT%SF0          =  1.0
/

! -------------------------------------------------------------------- !
! Define the depth to preprocess via DEPTH_NML namelist
! -------------------------------------------------------------------- !
&DEPTH_NML
  DEPTH%SF        =  -100.
  DEPTH%FILENAME  =  '../input/RTD.depth'
  DEPTH%IDLA      =  4
  DEPTH%FORMAT    =  '(...)'
/

! -------------------------------------------------------------------- !
! Define the point status map via MASK_NML namelist
! -------------------------------------------------------------------- !
&MASK_NML
  MASK%FILENAME  =  '../input/RTD.mask'
  MASK%IDLA      =  3
  MASK%FORMAT    =  '(...)'
/

! -------------------------------------------------------------------- !
! Define the output boundary points via OUTBND_COUNT_NML and
!                                       OUTBND_LINE_NML namelist
! -------------------------------------------------------------------- !
&OUTBND_COUNT_NML
  OUTBND_COUNT%N_LINE   =  3
/

&OUTBND_LINE_NML
  OUTBND_LINE(1)           =  0.0 1.0 0.0 1.0 8
  OUTBND_LINE(2)           =  0.0 -6.0 0.0 1.0 -8
  OUTBND_LINE(3)           =  -2.5 53.5 0.0 1.0 -8
/

! -------------------------------------------------------------------- !
! WAVEWATCH III - end of namelist                                      !
! -------------------------------------------------------------------- !
