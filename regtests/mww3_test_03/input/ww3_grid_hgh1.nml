! -------------------------------------------------------------------- !
! WAVEWATCH III - ww3_grid.nml - Grid pre-processing                   !
! -------------------------------------------------------------------- !

! -------------------------------------------------------------------- !
! Define the spectrum parameterization via SPECTRUM_NML namelist
! -------------------------------------------------------------------- !
&SPECTRUM_NML
  SPECTRUM%XFR       =  1.03
  SPECTRUM%FREQ1     =  0.075
  SPECTRUM%NK        =  20
  SPECTRUM%NTH       =  24
/

! -------------------------------------------------------------------- !
! Define the run parameterization via RUN_NML namelist
! -------------------------------------------------------------------- !
&RUN_NML
  RUN%FLCX         =  T
  RUN%FLCY         =  T
  RUN%FLCTH        =  T
/

! -------------------------------------------------------------------- !
! Define the timesteps parameterization via TIMESTEPS_NML namelist
! -------------------------------------------------------------------- !
&TIMESTEPS_NML
  TIMESTEPS%DTMAX        =  300.0
  TIMESTEPS%DTXY         =  300.0
  TIMESTEPS%DTKTH        =  300.0
  TIMESTEPS%DTMIN        =  5.0
/

! -------------------------------------------------------------------- !
! Define the grid to preprocess via GRID_NML namelist
! -------------------------------------------------------------------- !
&GRID_NML
  GRID%NAME         =  'High resolution grid 1'
  GRID%NML          =  '../input/namelists_hgh1.nml'
  GRID%TYPE         =  'RECT'
  GRID%COORD        =  'CART'
  GRID%CLOS         =  'NONE'
  GRID%ZLIM         =  -0.1
  GRID%DMIN         =  10.0
/

! -------------------------------------------------------------------- !
! Define the rectilinear grid type via RECT_NML namelist
! -------------------------------------------------------------------- !
&RECT_NML
  RECT%NX           =  41
  RECT%NY           =  60
  RECT%SX           =  5.00E3
  RECT%SY           =  5.00E3
  RECT%X0           =  -5.00E3
  RECT%Y0           =  210.00E3
/

! -------------------------------------------------------------------- !
! Define the depth to preprocess via DEPTH_NML namelist
! -------------------------------------------------------------------- !
&DEPTH_NML
  DEPTH%SF        =  -1.
  DEPTH%FILENAME  =  '../input/hgh1.depth'
  DEPTH%IDLA      =  3
/

! -------------------------------------------------------------------- !
! Define the point status map via MASK_NML namelist
! -------------------------------------------------------------------- !
&MASK_NML
  MASK%FILENAME  =  '../input/hgh1.mask'
  MASK%IDLA      =  3
/

! -------------------------------------------------------------------- !
! WAVEWATCH III - end of namelist                                      !
! -------------------------------------------------------------------- !
