! -------------------------------------------------------------------- !
! WAVEWATCH III ww3_shel.nml - single-grid model                       !
! -------------------------------------------------------------------- !


! -------------------------------------------------------------------- !
! Define top-level model parameters via DOMAIN_NML namelist
! -------------------------------------------------------------------- !
&DOMAIN_NML
  DOMAIN%IOSTYP  = 0
  DOMAIN%STOP    = '19680606 060000'
/

! -------------------------------------------------------------------- !
! Define each forcing via the INPUT_NML namelist
! -------------------------------------------------------------------- !
&INPUT_NML
  INPUT%FORCING%CURRENTS      = 'H'
  INPUT%FORCING%WINDS         = 'T'
/

! -------------------------------------------------------------------- !
! Define the output types point parameters via OUTPUT_TYPE_NML namelist
! -------------------------------------------------------------------- !
&OUTPUT_TYPE_NML
  TYPE%FIELD%LIST          = 'DPT WND HS T02 DIR'
  TYPE%POINT%FILE          = '../input/points.list'
/

! -------------------------------------------------------------------- !
! Define output dates via OUTPUT_DATE_NML namelist
! -------------------------------------------------------------------- !
&OUTPUT_DATE_NML
  DATE%FIELD          = '19680606 000000' '3600' '19680618 000000'
  DATE%POINT          = '19680606 000000' '3600' '19680618 000000'
/

! -------------------------------------------------------------------- !
! Define homogeneous input via HOMOG_COUNT_NML and HOMOG_INPUT_NML namelist
! -------------------------------------------------------------------- !
&HOMOG_COUNT_NML
  HOMOG_COUNT%N_CUR                =  1
  HOMOG_COUNT%N_MOV                =  1
/

&HOMOG_INPUT_NML
  HOMOG_INPUT(1)%NAME        = 'CUR'
  HOMOG_INPUT(1)%VALUE1      = 0.0
  HOMOG_INPUT(1)%VALUE2      = 30.

  HOMOG_INPUT(2)%NAME        = 'MOV'
  HOMOG_INPUT(2)%VALUE1      = 5.0
  HOMOG_INPUT(2)%VALUE2      = 90.
/

! -------------------------------------------------------------------- !
! WAVEWATCH III - end of namelist                                      !
! -------------------------------------------------------------------- !
