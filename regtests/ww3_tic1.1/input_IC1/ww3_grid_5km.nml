! -------------------------------------------------------------------- !
! WAVEWATCH III - ww3_grid.nml - Grid pre-processing                   !
! -------------------------------------------------------------------- !

! -------------------------------------------------------------------- !
! Define the spectrum parameterization via SPECTRUM_NML namelist
! -------------------------------------------------------------------- !
&SPECTRUM_NML
  SPECTRUM%XFR       =  1.25
  SPECTRUM%FREQ1     =  0.08
  SPECTRUM%NK        =  3
  SPECTRUM%NTH       =  24
/

! -------------------------------------------------------------------- !
! Define the run parameterization via RUN_NML namelist
! -------------------------------------------------------------------- !
&RUN_NML
  RUN%FLCX         =  T
  RUN%FLSOU        =  T
/

! -------------------------------------------------------------------- !
! Define the timesteps parameterization via TIMESTEPS_NML namelist
! -------------------------------------------------------------------- !
&TIMESTEPS_NML
  TIMESTEPS%DTMAX        =  300.
  TIMESTEPS%DTXY         =  300.
  TIMESTEPS%DTKTH        =  300.
  TIMESTEPS%DTMIN        =  300.
/

! -------------------------------------------------------------------- !
! Define the grid to preprocess via GRID_NML namelist
! -------------------------------------------------------------------- !
&GRID_NML
  GRID%NAME         =  '1-D parameterized ice test'
  GRID%NML          =  '../input_IC1/namelists_5km.nml'
  GRID%TYPE         =  'RECT'
  GRID%COORD        =  'CART'
  GRID%CLOS         =  'NONE'
  GRID%ZLIM         =  -1.
  GRID%DMIN         =  1.
/

! -------------------------------------------------------------------- !
! Define the rectilinear grid type via RECT_NML namelist
! -------------------------------------------------------------------- !
&RECT_NML
  RECT%NX           =  13
  RECT%NY           =  3
  RECT%SX           =  5.E3
  RECT%SY           =  5.E3
  RECT%X0           =  -5.E3
  RECT%Y0           =  -5.E3
/

! -------------------------------------------------------------------- !
! Define the depth to preprocess via DEPTH_NML namelist
! -------------------------------------------------------------------- !
&DEPTH_NML
  DEPTH%SF        =  -10.
  DEPTH%FILENAME  =  '../input_IC1/5km.depth'
  DEPTH%IDLA      =  2
/

! -------------------------------------------------------------------- !
! Define the input boundary points via INBND_COUNT_NML and
!                                      INBND_POINT_NML namelist
! -------------------------------------------------------------------- !
&INBND_COUNT_NML
  INBND_COUNT%N_POINT    =  1
/

&INBND_POINT_NML
  INBND_POINT(1)         =  2 2 F
/

! -------------------------------------------------------------------- !
! WAVEWATCH III - end of namelist                                      !
! -------------------------------------------------------------------- !
