! -------------------------------------------------------------------- !
! WAVEWATCH III - ww3_grid.nml - Grid pre-processing                   !
! -------------------------------------------------------------------- !

! -------------------------------------------------------------------- !
! Define the spectrum parameterization via SPECTRUM_NML namelist
! -------------------------------------------------------------------- !
&SPECTRUM_NML
  SPECTRUM%XFR       =  1.25
  SPECTRUM%FREQ1     =  0.08
  SPECTRUM%NK        =  3
  SPECTRUM%NTH       =  24
/

! -------------------------------------------------------------------- !
! Define the run parameterization via RUN_NML namelist
! -------------------------------------------------------------------- !
&RUN_NML
  RUN%FLCX         =  T
  RUN%FLCY         =  T
  RUN%FLSOU        =  T
/

! -------------------------------------------------------------------- !
! Define the timesteps parameterization via TIMESTEPS_NML namelist
! -------------------------------------------------------------------- !
&TIMESTEPS_NML
  TIMESTEPS%DTMAX        =  300.
  TIMESTEPS%DTXY         =  300.
  TIMESTEPS%DTKTH        =  300.
  TIMESTEPS%DTMIN        =  300.
/

! -------------------------------------------------------------------- !
! Define the grid to preprocess via GRID_NML namelist
! -------------------------------------------------------------------- !
&GRID_NML
  GRID%NAME         =  '2-D parameterized ice test'
  GRID%NML          =  '../input_IC1/namelists_2-D.nml'
  GRID%TYPE         =  'RECT'
  GRID%COORD        =  'CART'
  GRID%CLOS         =  'NONE'
  GRID%ZLIM         =  -0.1
  GRID%DMIN         =  0.1
/

! -------------------------------------------------------------------- !
! Define the rectilinear grid type via RECT_NML namelist
! -------------------------------------------------------------------- !
&RECT_NML
  RECT%NX           =  51
  RECT%NY           =  51
  RECT%SX           =  5.0E3
  RECT%SY           =  5.0E3
  RECT%X0           =  0.0
  RECT%Y0           =  0.0
/

! -------------------------------------------------------------------- !
! Define the depth to preprocess via DEPTH_NML namelist
! -------------------------------------------------------------------- !
&DEPTH_NML
  DEPTH%SF        =  -1.0
  DEPTH%FILENAME  =  '../input_IC1/bot.dat'
/

! -------------------------------------------------------------------- !
! Define the input boundary points via INBND_COUNT_NML and
!                                      INBND_POINT_NML namelist
! -------------------------------------------------------------------- !
&INBND_COUNT_NML
  INBND_COUNT%N_POINT    =  3
/

&INBND_POINT_NML
  INBND_POINT(1)         =  2 2 F
  INBND_POINT(2)         =  50 2 T
  INBND_POINT(3)         =  50 50 T
/

! -------------------------------------------------------------------- !
! WAVEWATCH III - end of namelist                                      !
! -------------------------------------------------------------------- !
